{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "module": "ESNext",
    "outDir": "./dist",
    "rootDirs": [
      "./src"
    ],
    "declaration": true,
    "moduleResolution": "node",
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "emitDeclarationOnly": false,
    "plugins": [ 
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "public/**/*",
    "declarations.d.ts",  //Certifique-se de incluir este arquivo aqui
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
